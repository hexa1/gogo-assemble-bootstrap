    <hr class="vertical-spacer">

    {{#if related}}
    <div class="well well-sm">
      <h6>Related Articles</h6>
      <ul class="list-unstyled">
        {{#each related}}
          <li><a href="/{{slug}}/">{{name}}</a></li>
        {{/each}}
      </ul>
    </div>
    {{/if}}

    {{#if links}}
    <div class="well well-sm">
      <h6>Links &amp; Resources</h6>
      <ul class="list-unstyled">
        {{#each links}}
        <li><a target="_blank" href="{{href}}">{{name}}</a></li>
        {{/each}}
        {{#eachIndex page.technologies}}
        <li><a target="_blank" href="{{load ../tech this.item 'site'}}">{{load ../tech this.item 'name'}}</a></li>
        {{/eachIndex}}
      </ul>
    </div>
    {{/if}}
